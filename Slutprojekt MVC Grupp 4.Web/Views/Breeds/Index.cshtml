@model IndexVM
@{
    ViewBag.Title = "Breeds";
}

<section>
    <p>Explore the list of added breeds. Click a breed to view details.</p>

    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 1rem;">
        @foreach (var breed in Model.Raser)
        {
            <article style="padding: 1rem; border: 2px solid #FFD700; border-radius: 0.5rem;">
                <header>
                    <h3 style="margin-bottom: 0.5rem;">
                        <a asp-controller="Breeds" asp-action="DisplayBreed" asp-route-id="@breed.Id">
                            @breed.BreedName
                        </a>
                    </h3>
                </header>
            </article>
        }
    </div>

    <p style="margin-top: 2rem;">
        <a asp-action="InsertBreed" role="button">➕ Add New Breed</a>
    </p>
</section>
