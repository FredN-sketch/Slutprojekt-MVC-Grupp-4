<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://unpkg.com/@@picocss/pico@@latest/css/pico.classless.min.css">
	<title>@ViewBag.Title</title>
</head>

<body>
	<header>
		<nav>
			@if (User.Identity!.IsAuthenticated)
			{
				<a asp-controller="Breeds" asp-action="Index">Dog breeds</a>
				<a asp-controller="Account" asp-action="LogOut">Logout</a>
				//if logged in
			}
			else
			{
				<a asp-controller="Account" asp-action="LogIn">Login</a>
				//if not logged in
				<a asp-controller="Account" asp-action="Register">Register</a>
			}
			@if (User.IsInRole("Administrator"))
			{
				<a asp-controller="Account" asp-action="Admin">Admin view</a>
				//if user is admin
			}
		</nav>
		<h1>@ViewBag.Title</h1>
		@if (User.Identity!.IsAuthenticated)
		{
			<p>Welcome, @User.Identity.Name!</p>
		}
	</header>
	<br />
	<div class="container">
		@RenderBody()
	</div>
	@RenderSection("scripts", false)
</body>
</html>
